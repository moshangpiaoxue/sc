<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.mo.lib.view.indext_view.IndexView
        android:id="@+id/iv_sticky_index"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

    <com.mo.lib.view.indext_view.IndexBezierView
        android:id="@+id/ll_sticky_letter"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        app:additionalTipOffset="40dip"
        app:maxBezierHeight="150dip"
        app:maxBezierWidth="180dip"
        app:maxFontSize="77"
        app:isRecoverColor="true"
        app:minFontSize="40" />
</LinearLayout>